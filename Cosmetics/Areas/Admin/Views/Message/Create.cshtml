@using Cosmetics.Areas.Admin.ViewModels.Message
@model CreateMessageVM;
<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Message</div>
                <hr>
                <form asp-action="Create" asp-area="Admin" asp-controller="Message" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter Your asp-for">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SurName"></label>
                        <input asp-for="SurName" class="form-control" placeholder="Enter Your asp-for">
                        <span class="text-danger" asp-validation-for="SurName"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" placeholder="Enter Your asp-for">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MessageInfo"></label>
                        <textarea rows="4" asp-for="MessageInfo" class="form-control" placeholder="Enter "></textarea>
                        <span class="text-danger" asp-validation-for="MessageInfo"></span>
                    </div>
                 

                    <div class="form-group">
                        <button type="submit" class="btn btn-light px-5"><i class="icon-lock"></i> Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


</div>