@model List<Icon>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Icon</h5>
                <a class="btn btn-outline-success my-2" href="/admin/icon/create">Create</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>

                                <th scope="col">Image</th>
                                <th scope="col">Edit</th>
                                <th scope="col">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var icon in Model)
                                {
                                    <tr>
                                        <td><img src="~/assets/img/@icon.FilePath" style="width:100px; height:100px;" /></td>

                                        <td> <a asp-area="Admin" asp-action="Update" asp-controller="Icon" asp-route-id="@icon.Id">Edit</a></td>
                                        <td>
                                            <form asp-area="Admin" asp-action="Delete" asp-controller="Icon" asp-route-id="@icon.Id" method="post">
                                                <button type="submit">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
