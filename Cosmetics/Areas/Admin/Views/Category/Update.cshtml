@using Cosmetics.Areas.Admin.ViewModels.Category
@model UpdateCategoryVM

<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Vertical Form</div>
                <hr>
                <form asp-action="Update" asp-area="Admin" asp-controller="Category" asp-route-id="@Model.id" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter Your asp-for">
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


</div>
