
@model List<Category>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">category </h5>
                <a class="btn btn-outline-success my-2" href="/admin/category/create">Create</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>

                             
                                <th scope="col">title</th>
                                <th scope="col">Count</th>
                                <th scope="col">Edit</th>
                                <th scope="col">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                           @{
                                foreach (var category in Model)
                                {
                                    <tr>

                                        <td>@category.Name</td>
                                        <td>@category.Count</td>

                                        <td> <button type="submit" asp-area="Admin" asp-action="Update" asp-controller="Category" asp-route-id="@category.Id">Edit</button></td>
                                        <td>
                                            <form asp-area="Admin" asp-action="Delete" asp-controller="Category" asp-route-id="@category.Id" method="post">
                                                <button class="btn btn-warning" type="submit">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div><!--End Row-->
