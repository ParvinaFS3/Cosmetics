@model List<Product>
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Product </h5>
                <a class="btn btn-outline-success my-2" href="/admin/product/create">Create</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>

                                <th scope="col">Image</th>
                                <th scope="col">title</th>
                                <th scope="col">Edit</th>
                                <th scope="col">Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var product in Model)
                                {
                                    <tr>
                                        <td><img src="/assets/images/@product.FilePath" style="width:100px; height:100px;" /></td>

                                        <td>@product.Name</td>

                                        <td> <a  asp-area="Admin" asp-action="Update" asp-controller="Product" asp-route-id="@product.Id">Edit</a></td>
                                        <td>
                                            <form asp-area="Admin" asp-action="Delete" asp-controller="Product" asp-route-id="@product.Id" method="post">
                                                <button class="btn btn-warning"  type="submit">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div><!--End Row-->
