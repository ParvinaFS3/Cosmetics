
@using Cosmetics.Areas.Admin.Views.Product
@using Cosmetics.Models.Constants
@model ProductCreateCategoryVM
<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Product</div>
                <hr>
                <form asp-action="Create" asp-area="Admin" asp-controller="Product" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="@Model.CreateProductVM.Name"></label>
                        <input asp-for="@Model.CreateProductVM.Name" class="form-control" placeholder="Enter Your asp-for">
                        <span class="text-danger" asp-validation-for="@Model.CreateProductVM.Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CreateProductVM.CreatedAt"></label>
                        <input asp-for="@Model.CreateProductVM.CreatedAt" class="form-control" placeholder="Enter Your asp-for">
                        <span class="text-danger" asp-validation-for="@Model.CreateProductVM.CreatedAt"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CreateProductVM.Price"></label>
                        <input asp-for="@Model.CreateProductVM.Price" class="form-control" placeholder="Enter Your asp-for">
                        <span class="text-danger" asp-validation-for="@Model.CreateProductVM.Price"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CreateProductVM.CategoryId">Category</label>
                        <select asp-for="@Model.CreateProductVM.CategoryId" asp-items="@Model.Categories.Select(a=>new SelectListItem() {Text=a.Name , Value=a.Id.ToString()})" class="form-control" placeholder="Enter Your asp-for"></select>
                        <span class="text-danger" asp-validation-for="@Model.CreateProductVM.CategoryId"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CreateProductVM.Delivery">Category</label>
                        <select asp-for="@Model.CreateProductVM.Delivery" asp-items="Html.GetEnumSelectList<Delivery>()" class="form-control" placeholder="Enter Your asp-for"></select>

                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CreateProductVM.Description"></label>
                        <textarea rows="4" asp-for="@Model.CreateProductVM.Description" class="form-control" placeholder="Enter "></textarea>
                        <span class="text-danger" asp-validation-for="@Model.CreateProductVM.Description"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.CreateProductVM.File"></label>
                        <input asp-for="@Model.CreateProductVM.File" type="file" value="FormFile" class="form-control" />
                        <span class="text-danger" asp-validation-for="@Model.CreateProductVM.File"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-light px-5"><i class="icon-lock"></i> Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


</div>
