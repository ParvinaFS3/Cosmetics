@using Cosmetics.Areas.Admin.ViewModels
@using Cosmetics.Models.Constants

@model ProductUpdateCategoryVM
<div class="row mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="card-title">Product</div>
                <hr>
                <form  asp-area="Admin" asp-controller="Product" asp-route-id="@Model.UpdateProductVm.Id" asp-action="Update" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="@Model.UpdateProductVm.Name"></label>
                        <input asp-for="@Model.UpdateProductVm.Name" class="form-control" placeholder="Enter Your asp-for">
                        <span class="text-danger" asp-validation-for="@Model.UpdateProductVm.Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.UpdateProductVm.CreatedAt"></label>
                        <input asp-for="@Model.UpdateProductVm.CreatedAt" class="form-control" placeholder="Enter Your asp-for">
                        <span class="text-danger" asp-validation-for="@Model.UpdateProductVm.CreatedAt"></span>

                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.UpdateProductVm.Price"></label>
                        <input asp-for="@Model.UpdateProductVm.Price" class="form-control" placeholder="Enter Your asp-for">
                        <span class="text-danger" asp-validation-for="@Model.UpdateProductVm.Price"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.UpdateProductVm.CategoryId">Category</label>
                        <select asp-for="@Model.UpdateProductVm.CategoryId" asp-items="@Model.Categories.Select(a=>new SelectListItem() {Text=a.Name , Value=a.Id.ToString()})" class="form-control" placeholder="Enter Your asp-for"></select>
                        <span class="text-danger" asp-validation-for="@Model.UpdateProductVm.CategoryId"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.UpdateProductVm.Delivery">Category</label>
                        <select asp-for="@Model.UpdateProductVm.Delivery" asp-items="Html.GetEnumSelectList<Delivery>()" class="form-control" placeholder="Enter Your asp-for"></select>

                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.UpdateProductVm.Description"></label>
                        <textarea  asp-for="@Model.UpdateProductVm.Description" class="form-control" placeholder="Enter "></textarea>
                        <span class="text-danger" asp-validation-for="@Model.UpdateProductVm.Description"></span>
                    </div>
                    <div class="form-group">
                        <img src="~/assets/images/@Model.UpdateProductVm.FilePath" style="width:150px;" />
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.UpdateProductVm.File"></label>
                        <input type="hidden" asp-for="@Model.UpdateProductVm.FilePath" />
                        <input asp-for="@Model.UpdateProductVm.File" type="file" value="FormFile" class="form-control" />
                        <span class="text-danger" asp-validation-for="@Model.UpdateProductVm.File "></span>
                    </div>
                    <div class="form-group">

                    </div>
                   
                        <button type="submit" class="btn btn-light px-5"><i class="icon-lock"></i> Create</button>
                    
                </form>
            </div>
        </div>
    </div>


</div>
